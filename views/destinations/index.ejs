<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Destinations Index</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
  </head>
  <body>
    <%- include('../partials/_nav') %>
    <main>
    <h1>All Destinations</h1>
    <% if (message) { %>
      <p><small class="success"><%= message %></small></p>
    <% } %>
    <ul>
      <% destinations.forEach(destination => { %>
        <li>
          <a class="destination" href="/destinations/<%=destination._id%>"><%= destination.name %></a>
        </li>
      <% }) %>
    </ul>
    <a class="btn" href="/destinations/new">Add New Destination</a>
  </main>
  </body>
</html>