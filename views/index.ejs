<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Travel App</title>
  <link rel="stylesheet" href="/stylsheets/style.css">
</head>
<body>
  <%- include('./partials/_nav') %>
  <main>
    <div class="card-container">
      <h1 class="headline">Top Vacation Destinations</h1>
      
      <!-- Carousel Container -->
      <div class="carousel-container">
        <div class="card-grid">
          <div class="card">
              <a href="/auth/sign-up">
                  <img src="https://i.natgeofe.com/n/3012ffcc-7361-45f6-98b3-a36d4153f660/colosseum-daylight-rome-italy.jpg?w=2560&h=1706" alt="Rome, Italy">
                  <div class="card-info">
                      <h2>Rome, Italy</h2>
                  </div>
              </a>
          </div>
          <div class="card">
              <a href="/auth/sign-up">
                  <img src="https://www.irishcentral.com/uploads/article-v2/2021/10/148551/cropped_Kerry.TourismIreland.jpg?t=1633689748" alt="Kerry, Ireland">
                  <div class="card-info">
                      <h2>Kerry, Ireland</h2>
                  </div>
              </a>
          </div>
          <div class="card">
              <a href="/auth/sign-up">
                  <img src="https://images.goway.com/production/featured_images/australia_sydney_opera_house_gt_mag.jpg" alt="Sydney, Australia">
                  <div class="card-info">
                      <h2>Sydney, Australia</h2>
                  </div>
              </a>
          </div>
          <div class="card">
              <a href="/auth/sign-up">
                  <img src="https://media.istockphoto.com/id/1185953092/photo/the-main-attraction-of-paris-and-all-of-europe-is-the-eiffel-tower-in-the-rays-of-the-setting.jpg?s=612x612&w=0&k=20&c=ZneUFVlR5TPCooxRV1rldUAadqLxZEvOoyVCOrtpcRQ=" alt="Paris, France">
                  <div class="card-info">
                      <h2>Paris, France</h2>
                  </div>
              </a>
          </div>
          <div class="card">
              <a href="/auth/sign-up">
                  <img src="https://t4.ftcdn.net/jpg/02/57/75/51/360_F_257755130_JgTlcqTFxabsIKgIYLAhOFEFYmNgwyJ6.jpg" alt="London, UK">
                  <div class="card-info">
                      <h2>London, UK</h2>
                  </div>
              </a>
          </div>
          <div class="card">
              <a href="/auth/sign-up">
                  <img src="https://media.istockphoto.com/id/1454217037/photo/statue-of-liberty-and-new-york-city-skyline-with-manhattan-financial-district-world-trade.jpg?s=612x612&w=0&k=20&c=6V54_qVlDfo59GLEdY2W8DOjLbbHTJ9y4AnJ58a3cis=" alt="New York, USA">
                  <div class="card-info">
                      <h2>New York, USA</h2>
                  </div>
              </a>
          </div>
          <div class="card">
              <a href="/auth/sign-up">
                  <img src="https://portfoliocollection.com/wp-content/uploads/2022/12/kylefromthenorth-hzR9rDXWbqo-unsplash.jpg" alt="Cape Town, South Africa">
                  <div class="card-info">
                      <h2>Cape Town, South Africa</h2>
                  </div>
              </a>
          </div>
          <div class="card">
              <a href="/auth/sign-up">
                  <img src="https://boutiquejapan.com/wp-content/uploads/2019/07/yasaka-pagoda-higashiyama-kyoto-japan.jpg" alt="Kyoto, Japan">
                  <div class="card-info">
                      <h2>Kyoto, Japan</h2>
                  </div>
              </a>
          </div>
      </div>
        </div>
      </div>
      <!-- Navigation Buttons for Carousel -->
      <div class="carousel-nav">
        <button id="prevBtn">Prev</button>
        <button id="nextBtn">Next</button>
      </div>
    </div>
  </main>

  <footer class="footer">
    <div class="social-icons">
      <a href="#"><img src="/images/social_icons/Facebook.png" alt="Facebook" /></a>
      <a href="#"><img src="/images/social_icons/Instagram.png" alt="Instagram" /></a>
      <a href="#"><img src="/images/social_icons/twitter.png" alt="Twitter" /></a>
      <a href="#"><img src="/images/social_icons/youtube.png" alt="YouTube" /></a>
    </div>
  </footer>

  <script>
    // Carousel functionality for manual scrolling
    let currentIndex = 0;
    const cards = document.querySelectorAll('.card');
    const totalCards = cards.length;
    const cardWidth = cards[0].offsetWidth + 50; // Width of each card + margin

    const prevBtn = document.getElementById('prevBtn');
    const nextBtn = document.getElementById('nextBtn');
    const cardGridContainer = document.querySelector('.card-grid');

    function updateCarousel() {
      cardGridContainer.style.transform = `translateX(-${currentIndex * cardWidth}px)`;
    }

    nextBtn.addEventListener('click', () => {
      if (currentIndex < totalCards - 4) {
        currentIndex++;
        updateCarousel();
      }
    });

    prevBtn.addEventListener('click', () => {
      if (currentIndex > 0) {
        currentIndex--;
        updateCarousel();
      }
    });

    // Optional: Auto-scroll functionality every 5 seconds
    setInterval(() => {
      if (currentIndex < totalCards - 4) {
        currentIndex++;
      } else {
        currentIndex = 0;
      }
      updateCarousel();
    }, 3000);
  </script>

</body>
</html>
